<h2>All posts List when logged in</h2>
<div class="search-filter">
  <form action="/posts/filter" method="POST">
    <label for="category">Select Category:</label>
    <select id="category" name="category">
      <option value="sell/rent">Sell/Rent</option>
      <option value="tips">Tips</option>
      <option value="meetup">Meetup</option>
    </select>
    <button type="submit">Search by Category</button>
  </form>
</div>

<div class="posts-container">
  {{#each posts}}
    <div class="post-card">
      <div class="post-category">
        <p>Category: {{this.category}}</p>
      </div>
      <div class="post-title">
        <h3>Title: {{this.title}}</h3>
      </div>
      <div class="post-content">
        <p>Desc: {{this.description}}</p>
        {{!-- <img src={{this.mediaUrl}} alt=""> --}}
      </div>
      <div class="post-meta">
        <p>Author: {{this.author.username}}</p>
        <p>Timestamp: {{this.timeStamps}}</p>
      </div>
    </div>
  {{/each}}
</div>